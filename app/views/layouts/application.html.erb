<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.indigo-pink.min.css">
    <script defer src="https://code.getmdl.io/1.3.0/material.min.js"></script>
    
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!--[if lt IE 9]>
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
      </script>
    <![endif]-->
  </head>


  <body class="mdl-layout mdl-js-layout">
    <header class="mdl-layout__header mdl-layout--large-screen-only">
      <div class="mdl-layout-icon"></div>
      <div class="mdl-layout__header-row">
        <span class="mdl-layout-title">
          <a class="mdl-navigation__link" href="/"><em>Crazy Faker!!</em></a>
        </span>
        <div class="mdl-layout-spacer"></div>
        <nav class="mdl-navigation">
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Home",               root_url,     class: "mdl-navigation__link"  %></li>
            <li><%= link_to "Faker'ized posts",   posts_url,    class: "mdl-navigation__link"  %></li>
            <li><%= link_to "Help",               help_url,     class: "mdl-navigation__link"  %></li>
            <li><%= link_to "Other gems",         othergems_url,class: "mdl-navigation__link"  %></li>
          </ul>
        </nav>
      </div>
    </header>
    <div class="mdl-layout__drawer mdl-layout--small-screen-only">
      <span class="mdl-layout-title"><a class="mdl-navigation__link" href="/">Crazy Faker!!</a></span>
      <nav class="mdl-navigation">
          <%= link_to "Home",                     root_url,     class: "mdl-navigation__link" %>
          <%= link_to "Faker'ized posts",         posts_url,    class: "mdl-navigation__link" %>
          <%= link_to "Help",                     help_url,     class: "mdl-navigation__link" %>
          <%= link_to "Other gems",               othergems_url,class: "mdl-navigation__link" %>
      </nav>
    </div>



    <section class="mdl-layout__content">
      <div class="page-content">
        <%= yield %>
      </div>
    </section>



    <footer class="mdl-mini-footer">  
      <div class="mdl-mini-footer__left-section">
          <div class="mdl-logo">Crazy Faker!!</div>
          <nav>
            <ul class="mdl-mini-footer__link-list">
              <li><%= link_to "Faker'ized posts",   posts_url %></li>
              <li><%= link_to "Help",               help_url %></li>
              <li><%= link_to "Other gems",         othergems_url %></li>
            </ul>
          </nav>
          <small>Mekesia Brown, 2016 - 2018</small>
      </div>
    </footer>
  </body>
</html>
